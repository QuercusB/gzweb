function initDatepickers() {
    $.datepicker.setDefaults({
        dateFormat: 'dd.mm.yy',
        firstDay: 1,
        dayNames: ['Воскресенье', 'Понедельник', 'Вторник', 'Среда', 'Четверг', 'Пятница', 'Суббота'],
        dayNamesMin: ['В', 'П', 'В', 'С', 'Ч', 'П', 'С'],
